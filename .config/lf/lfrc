# % is for 'silent' shell commands
# $ will interrupt lf and go to shell
# : is for lf commands

set preview true
set shell fish
set reverse!

# sets fish variable lfDir to nothing on open
%set -Ux lfDir ''

# unmaps keys
map d
map n
map i
map h
map m

map <a-b> updir

map <enter> $$EDITOR "$f"
map del trash
map a :{{
	unselect
	invert
}}
map i invert
map c copy
map x cut
map u :{{
	unselect
	clear
}}
map v paste


map f search
map g search-next

# open code
map oc $code $f
# open default
map od $open $f
# open finder
map of $open .
# open mark text
map om ${{
	marktext -n $f
}}

map sh set hidden!

# mark loads and saves bookmark a
map ms push :mark-save<enter>a
map ml push :mark-load<enter>a

map dt cd ~/Desktop
map dv cd ~/Developer
map dot cd ~/.config
map dl cd ~/Downloads
map hm cd ~
map nt cd ~/Documents/notes
# directory i(cloud)
map di cd ~/Library/Mobile\ Documents/com~apple~CloudDocs

map mv :{{
	$set -Ux lfDir $PWD
	quit
}}

cmd trash %{{
	if test -n $fs
		for item in (echo $fs)
			echo "trashing $item"
			trash $item
		end
	else
		echo 'delete selection empty'
	end
}}

# new directory
cmd newdir %mkdir $argv[1]
map nd push :newdir<space>

# new file
cmd newfile $nano $argv[1]
map nf push :newfile<space>
